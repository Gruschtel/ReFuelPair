<?xml version="1.0" encoding="utf-8"?>
<!-- Create by Alea Sauer -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context="de.gruschtelapps.fh_maa_refuelpair.views.fragment.add.NewInsurancePolicyFragment">

    <android.support.constraint.ConstraintLayout
        style="@style/ContentsMarginAll"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Vehicle Type -->
        <ImageView
            android:id="@+id/image_addInsurance_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_contacs_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_addInsurance_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_addInsurance_name"
            tools:ignore="ContentDescription" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/text_addInsurance_name"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/desc_contactName"
            android:hint="@string/edit_hint_contactName"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_addInsurance_contact"
            app:layout_constraintTop_toTopOf="parent"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="@string/edit_hint_contactName"
            tools:ignore="Autofill,ContentDescription" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/text_addInsurance_surename"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/desc_contactSurename"
            android:hint="@string/edit_hint_contactSurename"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_addInsurance_contact"
            app:layout_constraintTop_toBottomOf="@+id/text_addInsurance_name"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="@string/edit_hint_contactSurename"
            tools:ignore="Autofill,ContentDescription" />


        <!-- Telephone -->
        <ImageView
            android:id="@+id/image_addInsurance_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_phone_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_addInsurance_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_addInsurance_phone"
            tools:ignore="ContentDescription" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/text_addInsurance_phone"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/desc_phone"
            android:hint="@string/edit_hint_phone"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_addInsurance_phone"
            app:layout_constraintTop_toBottomOf="@+id/text_addInsurance_surename"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="@string/edit_hint_phone"
            tools:ignore="Autofill,ContentDescription" />

        <!-- E-Mail -->
        <ImageView
            android:id="@+id/image_addInsurance_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_email_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_addInsurance_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_addInsurance_email"
            tools:ignore="ContentDescription" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/text_addInsurance_email"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/desc_email"
            android:hint="@string/edit_hint_email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_addInsurance_email"
            app:layout_constraintTop_toBottomOf="@+id/text_addInsurance_phone"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="@string/edit_hint_email"
            tools:ignore="Autofill,ContentDescription" />

        <!-- Adresse -->
        <ImageView
            android:id="@+id/image_addInsurance_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_pin_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_addInsurance_adress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_addInsurance_adress"
            tools:ignore="ContentDescription" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/text_addInsurance_adress"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/desc_adress"
            android:hint="@string/edit_hint_adress"
            android:inputType="textPostalAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_addInsurance_adress"
            app:layout_constraintTop_toBottomOf="@+id/text_addInsurance_email"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="@string/edit_hint_adress"
            tools:ignore="Autofill,ContentDescription" />

        <!-- Insuracne Policy Name -->
        <ImageView
            android:id="@+id/image_addInsurance_policyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_car_insurance_policy_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_addInsurance_policyName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_addInsurance_policyName"
            tools:ignore="ContentDescription" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/text_addInsurance_policyName"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/desc_policyName"
            android:hint="@string/edit_hint_policyName"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_addInsurance_policyName"
            app:layout_constraintTop_toBottomOf="@+id/text_addInsurance_adress"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="@string/edit_hint_policyName"
            tools:ignore="Autofill,ContentDescription" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/text_addInsurance_policyNumber"
            style="@style/SingleLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/desc_policyNumber"
            android:hint="@string/edit_hint_policyNumber"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_addInsurance_policyName"
            app:layout_constraintTop_toBottomOf="@+id/text_addInsurance_policyName"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="@string/edit_hint_policyNumber"
            tools:ignore="Autofill,ContentDescription" />

    </android.support.constraint.ConstraintLayout>


</ScrollView>
