<?xml version="1.0" encoding="utf-8"?>
<!-- Create by Alea Sauer -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/ItemSpacing"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_vehicleData_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_vehicleData_type"
        app:srcCompat="@drawable/ic_car_black_24dp"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/text_vehicleData_type"
        style="@style/TextView.ListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/desc_text_item"
        android:text="@string/fuel_Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_icon"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- long line -->
    <View
        android:id="@+id/view_customInformation_longLine"
        style="@style/ListItemSeperator"
        android:src="@drawable/shape_line"
        app:layout_constraintEnd_toEndOf="@+id/text_vehicleData_type"
        app:layout_constraintStart_toStartOf="@+id/text_vehicleData_type"
        app:layout_constraintTop_toBottomOf="@+id/text_vehicleData_type" />


</android.support.constraint.ConstraintLayout>